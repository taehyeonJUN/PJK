<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<!-- 로그를 화면에 출력하는 역할 (log4j는 콘솔에 출력하는 역할, value="%-5p: %c - %m%n"는 출력문 패턴)-->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
		<!-- Application Loggers -->
<!-- 	kr.ac.kopo 패키지 아래에 있는 클래스인 Dao클래스 안에서 마이바티스가 출력하는 로그를 보기 위해서는 로그 레벨을 낮출필요가 있다 
		로스레벨 :  FATAL >ERROR> WARNINFO> DEBUG> TRACE	-->
	<logger name="com.edu.pjk">
		<level value="trace" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
	<!-- 	경고메세지보다 중요한것을 콘솔에 출력 -->
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
